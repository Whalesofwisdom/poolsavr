---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Measure Your Pool Online | Pool Measurement Tool">
  <main>
    <header class="sticky top-0 z-50 bg-white border-b">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <div class="font-bold text-xl">PoolMeasure</div>
        <a href="/measure" class="bg-primary text-primary-foreground px-6 py-2 rounded-md font-semibold hover:bg-primary/90">
          Measure My Pool
        </a>
      </div>
    </header>

    <section class="container mx-auto px-4 py-20 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Measure your pool in 60 seconds â€” right on the map
      </h1>
      <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
